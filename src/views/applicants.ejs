<div class="container mt-5">
  <h1>Applicants for Job</h1>
    <table class="table table-striped applicants-table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Contact</th>
          <th scope="col">Resume</th>
        </tr>
      </thead>
      <tbody>
        <% applicants.slice((pageNo - 1) * 6, pageNo * 6).forEach((applicant) => { %>
              <tr>
                  <td></td>
                  <td><%= applicant.name %></td>
                  <td><%= applicant.email %></td>
                  <td><%= applicant.contact %></td>
                  <td>
                      <% if (applicant.resume) { %>
                          <a href="<%= applicant.resume %>" class="btn btn-outline-primary rounded-pill">Download Resume</a>
                      <% } else { %>
                          No resume uploaded
                      <% } %>
                  </td>
              </tr>
          <% }); %>
      </tbody>
    </table>
  <!-- Pagination -->
    <nav aria-label="Page navigation example">
      <ul class="pagination">
      <% for (let i = 1; i <= applicants.length/6; i++) { %>
        <li>
          <a class="page-link" href="/job/<%= jobId %>/applicants?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>
      </ul>
    </nav>
  </div>